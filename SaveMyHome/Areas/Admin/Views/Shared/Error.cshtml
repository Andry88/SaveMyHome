@model IEnumerable<string>
@using Resources 
@{
    ViewBag.Title = Error._Error;
}
<div class="alert alert-danger">
    @switch (Model.Count())
    {
        case 0:
            @: @Error.TryOnceAgain
            break;
        case 1:
            @Model.First();
            break;
        default:
            @: @Error.FollowingErrorsWereDetected:
            <ul>
                @foreach (string error in Model)
                {
                    <li>@error</li>
                }
            </ul>
            break;
    }
</div>
@Html.ActionLink("OK", "Index", null, new { @class = "btn btn-default" })