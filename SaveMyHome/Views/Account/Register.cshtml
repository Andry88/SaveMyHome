@model SaveMyHome.ViewModels.RegisterViewModel
@using Resources

@{
    ViewBag.Title = Account.Register;
}
 <h4>@Account.CreateAccount</h4><hr/>

@using(Html.BeginForm("Register", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.Partial("_RegisterEditPartial", Model)

        <button type="submit" class="btn btn-primary">Сохранить</button>
        @Html.ActionLink("Отмена", "Index", "Home", null, new { @class = "btn btn-default" })
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
