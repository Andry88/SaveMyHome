@model IEnumerable<SaveMyHome.Models.Message>
@if (Model.Count() > 0)
{
    foreach (var answer in Model)
    {
        <div>
            @answer.ClientProfile.FullName, 
            @Resources.HeadAndAnswerMessages.Apart №@answer.ClientProfile.ApartmentNumber:<br />
            <b>@answer.Text</b>
            <div>@answer.Time</div>
        </div>
    }
}