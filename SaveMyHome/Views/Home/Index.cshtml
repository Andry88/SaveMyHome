@using SaveMyHome.Models
@{
    ViewBag.Title = Resources.HomeIndex.Title;
}
@if (TempData["msg"] != null)
{
    <div class="alert alert-danger">
        @TempData["msg"]
    </div>
}
<div class="jumbotron">
    <p class="lead">@Resources.HomeIndex.Text</p>
</div>

@if (ViewBag.ProblemStatus == ProblemStatus.PotentialCulprit ||
     ViewBag.ProblemStatus == ProblemStatus.PotentialVictim)
{
    <div class="col-md-offset-5">
        @Html.ActionLink(Resources.HomeIndex.Attention, "Answer", "Flood", 
       new { notifyStatus = ViewBag.ProblemStatus }, 
       new { @class = "btn btn-lg btn-danger"})
    </div>
}
